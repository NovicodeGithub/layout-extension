{
    "manifest_version": 2,
    "version": "1.0.0",
    "name": "Layout Checker",
    "description": "Allows you to check layout for optimization",
    "author": "Atom Space",
    "background": {
        "scripts": [
            "background.js"
        ],
        "css": [
            "style.css"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "https://*/*"
            ],
            "css": [

            ],
            "js": [
                "jquery-3.3.1.min.js",
                "popup.js",
                "injected.js"
            ],
            "all_frames": true
        }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources": [
        "images/1.jpg"
    ],
    "browser_action": {
        "default_title": "Layout Checker",
        "default_popup": "popup.html"
    },
    "short_name": "Layout Checker",
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs"
    ]
}
